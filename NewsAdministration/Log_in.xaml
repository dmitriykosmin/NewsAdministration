<Window x:Class="NewsAdministration.Log_in"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsAdministration"
        mc:Ignorable="d"
        Title="Войдите, используя учётную запись администратора" Height="200" Width="700" FontFamily="Times New Roman" FontSize="18" ResizeMode="CanMinimize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Введите логин :" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" Text="Введите пароль :" VerticalAlignment="Top"/>
        <TextBox x:Name="Login" HorizontalAlignment="Stretch" Height="23" Margin="10,35,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Stretch" Height="23" Margin="10,102,10,0" VerticalAlignment="Top"/>
        <Button x:Name="LogIn" Content="Войти" HorizontalAlignment="Right" Margin="0,132,10,0" VerticalAlignment="Top" Width="75" Click="LogIn_Click"/>

    </Grid>
</Window>
