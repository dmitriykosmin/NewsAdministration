<Window x:Class="NewsAdministration.Change_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsAdministration"
        mc:Ignorable="d"
        Title="Change password" Height="200" Width="700" FontFamily="Times New Roman" FontSize="18" ResizeMode="CanMinimize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Enter old password :" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" Text="Enter new password :" VerticalAlignment="Top"/>
        <PasswordBox x:Name="OldPassword" HorizontalAlignment="Stretch" Height="23" Margin="10,35,10,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="NewPassword" HorizontalAlignment="Stretch" Height="23" Margin="10,102,10,0" VerticalAlignment="Top"/>
        <Button x:Name="Change" Content="Change password" HorizontalAlignment="Right" Margin="0,132,10,0" VerticalAlignment="Top" Width="175" Click="Change_Click"/>
    </Grid>
</Window>
